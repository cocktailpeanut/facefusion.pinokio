{
  "requires": [{
    "type": "conda",
    "name": "ffmpeg",
    "args": "-c conda-forge"
  }, {
    "platform": "win32",
    "name": "vs"
  }],
  "run": [{
    "method": "shell.run",
    "params": {
      "message": "git clone https://github.com/facefusion/facefusion --branch 2.0.0 --single-branch"
    }
  }, {
    "method": "shell.run",
    "params": {
      "message": "{{os.platform() === 'win32' ? 'python' : 'python3'}} -m venv env",
      "path": "facefusion"
    }
  }, {
    "method": "shell.start",
    "params": {
      "path": "facefusion"
    }
  }, {
    "method": "shell.enter",
    "params": {
      "message": "{{os.platform() === 'win32' ? 'env\\\\Scripts\\\\activate' : 'source env/bin/activate'}} env",
      "on": [{
        "event": null,
        "return": true
      }]
    }
  }, {
    "method": "shell.enter",
    "params": {
      "message": "python install.py --onnxruntime directml --torch cpu",
      "on": [{
        "event": null,
        "return": true
      }]
    }
  }, {
    "method": "shell.enter",
    "params": {
      "message": "",
      "on": [{
        "event": null,
        "return": true
      }]
    }
  }, {
    "method": "input",
    "params": {
      "title": "Install Success",
      "description": "Go back to the dashboard and launch the app!"
    }
  }, {
    "method": "browser.open",
    "params": {
      "uri": "/?selected=facefusion"
    }
  }]
}
